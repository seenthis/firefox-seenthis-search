<?xml version="1.0" encoding="UTF-8"?>
<overlay id="seenthisIncsearchOverlay"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <commandset id="mainCommandSet">
    <command id="seenthisIncsearchCommand" oncommand="open_seenthisIncsearch();"/>
  </commandset>
  <menupopup id="menu_ToolsPopup">
    <menuitem id="seenthisIncsearchMenuitem"
      label="seenthis.net search"
      insertbefore="sanitizeSeparator"
      key="key_open_seenthisIncsearch"
      command="seenthisIncsearchCommand" />
  </menupopup>
  <toolbarpalette id="BrowserToolbarPalette">
    <toolbarbutton id="seenthisIncsearchButton" class="toolbarbutton-1"
      label="seenthis.net search" tooltiptext="seenthis.net search"
      command="seenthisIncsearchCommand" />
  </toolbarpalette>
  <keyset id="mainKeyset">
    <key id="key_open_seenthisIncsearch" modifiers="accel" key=":" command="seenthisIncsearchCommand" />
  </keyset>
  <script type="application/x-javascript">
  <![CDATA[
    window.addEventListener('load', function() {

      var openKey = document.getElementById('key_open_seenthisIncsearch');

      var prefSvc = Components.classes["@mozilla.org/preferences-service;1"].getService(Components.interfaces.nsIPrefService);
      var prefBranch = prefSvc.getBranch('extensions.seenthis_search.');

      try {
        var modifiers = prefBranch.getCharPref('shortcut.open.modifiers');
        openKey.setAttribute('modifiers', modifiers);
      } catch(e) {}

      try {
        var key = prefBranch.getCharPref('shortcut.open.key');
        openKey.setAttribute('key', key);
      } catch(e) {}

      try {
        if (prefBranch.getBoolPref('shortcut.open.disabled')) {
          openKey.parentNode.removeChild(openKey);
        }
      } catch(e) {}

    }, false);

    var open_seenthisIncsearch = function() {
      var openUrl = 'chrome://seenthis_search/content/view.html';
      var target = null;

      var tabs = gBrowser.tabContainer.childNodes;

      for (var i = 0, len = tabs.length; i < len; i++) {
        if (tabs[i].linkedBrowser.currentURI.spec == openUrl) {
          target = tabs[i];
          break;
        }
      }

      if (!target) {
        gBrowser.selectedTab = gBrowser.addTab(openUrl);
      } else {
        gBrowser.selectedTab = target;
        target.linkedBrowser.contentDocument.getElementById('text').focus();
      }
    }

  ]]>
  </script>

</overlay>
